{
    "openapi": "3.0.0",
    "info": {
        "title": "Survey Panda API",
        "description": "The Survey Panda API developed by Frank Li.",
        "version": "0.2.0",
        "contact": {
            "email": "threestones2@hotmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3001"
        }
    ],
    "basePath": "/",
    "tags": [
        {
            "name": "User"
        },
        {
            "name": "Company"
        },
        {
            "name": "Question"
        },
        {
            "name": "Search"
        }
    ],
    "paths": {
        "/user/new": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Register a new user account",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "example@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "examplepassword"
                                    },
                                    "companyId": {
                                        "type": "string",
                                        "example": "big_company"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User Created"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "oops! It looks like that user already exists :("
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Login with existing user account",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "demouser@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "demopass"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjp7ImlkIjo1Nzg2LCJlbWFpbCI6ImRlbW8xMjM0QGdtYWlsLmNvbSJ9LCJpYXQiOjE1NTUzMjQ2MDIsImV4cCI6MTU1NTQxMTAwMn0.mo85iKuAQ_h8n8-6pkeNNs5CCnV0G8hScxhi_ml_Q6c"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 86400
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "invalid login - bad password"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/company/new": {
            "post": {
                "tags": [
                    "Company"
                ],
                "summary": "Create new company record with default questionset",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Cheeky Bikes"
                                    },
                                    "industry": {
                                        "type": "string",
                                        "example": "Retail"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/company/update": {
            "post": {
                "tags": [
                    "Company"
                ],
                "summary": "Update existing company's questionset",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "cheekybikes"
                                    },
                                    "measures": {
                                        "type": ["string"],
                                        "example": ["Workload Perception", "Stress Level"]
                                    },
                                    "questions": {
                                        "type": ["string"],
                                        "example": ["How was the workload today?", "Did you find today a bit stressful?"]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/company/find": {
            "get": {
                "tags": [
                    "Company"
                ],
                "summary": "Find a company's information base on nameid",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "examplecompany"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/question/today": {
            "get": {
                "tags": [
                    "Question"
                ],
                "summary": "Find existing or create new questionnaire for a particular company on today",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "examplecompany"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/question/answer": {
            "post": {
                "tags": [
                    "Question"
                ],
                "summary": "Post answers to a existing questionnaire",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "examplecompany"
                                    },
                                    "answers": {
                                        "type": ["number"],
                                        "example": [3, 4, 4]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/search/day": {
            "get": {
                "tags": [
                    "Search"
                ],
                "summary": "Search for average results of the day of a company",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "examplecompany"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/search/week": {
            "get": {
                "tags": [
                    "Search"
                ],
                "summary": "Search for average results of the week of a company",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "examplecompany"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/search/trend": {
            "get": {
                "tags": [
                    "Search"
                ],
                "summary": "Search for trend of a company",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "example": "examplecompany"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}